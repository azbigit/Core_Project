@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "RecieverMessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Gelen Mail Detay</h1>
<form class="form-group">

    @Html.TextBoxFor(x => x.WriterMessageID, new { @class = "form-control" })

    @Html.Label("Alıcı Adı")
    @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })
    <br />
    @Html.Label("Alıcı Mail")
    @Html.TextBoxFor(x => x.Sender, new { @class = "form-control" })
    <br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control" })
    <br />
</form>



