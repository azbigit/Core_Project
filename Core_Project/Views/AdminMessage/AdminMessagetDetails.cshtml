@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessagetDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



@using (Html.BeginForm("EditExperience", "experience", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Admin Mesaj Detay Sayfası</p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x => x.WriterMessageID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Gönderen</label>
                        @Html.TextAreaFor(x => x.SenderName, 6, 3, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Alıcı</label>
                        @Html.TextAreaFor(x => x.ReciverName, 6, 3, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Mesaj</label>
                        @Html.TextBoxFor(x => x.MessageContent, new { @class = "form-control" })
                    </div>                 
                    <a asp-action="RecieverMessageList" class="btn btn-primary mr-2">Admin Gelen Mesajlar</a>
                    <a asp-action="SenderMessageList" class="btn btn-warning mr-2">Admin Giden Mesajlar</a>
                </form>
            </div>
        </div>
    </div>
}



